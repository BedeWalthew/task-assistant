{
  "name": "task-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm run --filter backend test",
    "test:all": "pnpm test:backend && pnpm test:e2e",
    "test:backend": "docker compose -f docker-compose.test.yml up -d && pnpm test:backend:testdb:migrate && pnpm test:backend:testdb",
    "test:backend:testdb:migrate": "DATABASE_URL=${DATABASE_URL_TEST:-postgres://user:password@localhost:5434/task_assistant_test?schema=public} pnpm --filter @task-assistant/backend db:migrate",
    "test:backend:testdb": "NODE_ENV=test DATABASE_URL=${DATABASE_URL_TEST:-postgres://user:password@localhost:5434/task_assistant_test?schema=public} pnpm --filter @task-assistant/backend test",
    "db:seed": "npx tsx packages/backend/src/prisma/seed.ts",
    "db:studio": "pnpm -C packages/backend exec prisma studio --schema=src/prisma/schema.prisma",
    "docker:up": "docker compose up -d",
    "docker:build": "docker compose build",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose up --build -d",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:db:generate": "docker compose exec -w /app/packages/backend backend pnpm db:generate",
    "docker:db:migrate": "docker compose exec -w /app/packages/backend backend pnpm db:migrate",
    "docker:db:reset": "docker compose exec -w /app/packages/backend backend pnpm db:reset",
    "docker:db:seed": "docker compose exec -w /app/packages/backend backend pnpm db:seed",
    "docker:db:studio": "docker compose exec -w /app/packages/backend backend pnpm db:studio",
    "docker:backend:build": "docker compose build backend",
    "docker:backend:up": "docker compose up -d backend",
    "docker:backend:down": "docker compose rm -s -f backend",
    "docker:frontend:build": "docker compose build frontend",
    "docker:frontend:up": "docker compose up -d frontend",
    "docker:frontend:down": "docker compose rm -s -f frontend",
    "test:e2e": "pnpm --filter @task-assistant/frontend test:e2e",
    "test:e2e:ui": "pnpm --filter @task-assistant/frontend test:e2e:ui"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  }
}
