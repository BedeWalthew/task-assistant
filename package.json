{
  "name": "task-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "db:seed": "npx tsx packages/backend/src/prisma/seed.ts",
    "db:studio": "pnpm -C packages/backend exec prisma studio --schema=src/prisma/schema.prisma",
    "docker:up": "docker compose up -d",
    "docker:build": "docker compose build",
    "docker:down": "docker compose down",
    "docker:dev": "docker compose up --build -d",
    "docker:db:generate": "docker compose exec -w /app/packages/backend backend pnpm db:generate",
    "docker:db:migrate": "docker compose exec -w /app/packages/backend backend pnpm db:migrate",
    "docker:db:reset": "docker compose exec -w /app/packages/backend backend pnpm db:reset",
    "docker:backend:build": "docker compose build backend",
    "docker:backend:up": "docker compose up -d backend",
    "docker:backend:down": "docker compose rm -s -f backend",
    "docker:frontend:build": "docker compose build frontend",
    "docker:frontend:up": "docker compose up -d frontend",
    "docker:frontend:down": "docker compose rm -s -f frontend"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  }
}
