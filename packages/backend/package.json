{
  "name": "@task-assistant/backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "db:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=src/prisma/schema.prisma --force"
  },
  "dependencies": {
    "@prisma/client": "5.10.2",
    "@task-assistant/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "pino": "^8.16.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.19.26",
    "prisma": "5.10.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
